<?xml version="1.0" encoding="UTF-8"?>

                                                                                                       
    
                                                                                                        
           

    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnmask"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700" android:tag="layout/activity_ver_recetas_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRecetas"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <FrameLayout android:id="@+id/frameStack"
                android:layout_height="@dimen/_140pxv" android:layout_width="match_parent">

                <LinearLayout android:id="@+id/linearColumn"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStylewhite_A700">

                    <TextView
                        android:id="@+id/txtH5"
                        style="@style/txt_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_101pxh"
                        android:layout_marginTop="@dimen/_42pxv"
                        android:layout_marginEnd="@dimen/_101pxh"
                        android:layout_marginBottom="@dimen/_21pxv"
                        android:ellipsize="end"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="true"
                        android:tag="binding_1"                       
                        android:textAlignment="center"
                        tools:text="@string/lbl_recetas2" />

                </LinearLayout>

                <FrameLayout android:id="@+id/frameStackbamxlogotwo"
                    android:layout_gravity="top|start"
                    android:layout_height="@dimen/_70pxv"
                    android:layout_marginBottom="@dimen/_10pxv" android:layout_width="match_parent">

                    <ImageView android:id="@+id/imageBamxlogoTwo"
                        android:layout_gravity="bottom|end"
                        android:layout_height="@dimen/_64pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="@dimen/_62pxh"
                        android:scaleType="fitXY"
                        android:tag="binding_2"                 
                        tools:ignore="ContentDescription" tools:src="@drawable/img_bamxlogo2_20"/>

                    <FrameLayout android:id="@+id/frameStackarrowleft"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_70pxv" android:layout_width="match_parent">
                        <LinearLayout
                            android:id="@+id/linearRowarrowleft"
                            android:onClick="regresar"
                            android:layout_gravity="top|start"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" style="@style/groupStylebluegray_801">
                            <ImageView android:id="@+id/imageArrowleft"
                                android:layout_height="@dimen/_22pxh"
                                android:layout_marginBottom="@dimen/_16pxv"
                                android:layout_marginStart="@dimen/_24pxh"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="@dimen/_26pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_arrowleft_white_a700"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft_white_a700"/>
                            <ImageView android:id="@+id/imageSearch"
                                android:layout_height="@dimen/_25pxh"
                                android:layout_marginBottom="@dimen/_15pxv"
                                android:layout_marginEnd="@dimen/_320pxh"
                                android:layout_marginStart="@dimen/_310pxh"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="@dimen/_25pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_search_white_a700"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_search_white_a700"/>
                        </LinearLayout>

                        <ImageView android:id="@+id/imageBamxlogoTwoOne"
                            android:layout_gravity="bottom|end"
                            android:layout_height="@dimen/_64pxh"
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_width="@dimen/_62pxh"
                            android:scaleType="fitXY"
                            android:tag="binding_3"                 
                            tools:ignore="ContentDescription" tools:src="@drawable/img_bamxlogo2_21"/>

                    </FrameLayout>
                </FrameLayout>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="556dp">

                <LinearLayout
                    android:id="@+id/linearRecetasVer"
                    style="@style/groupStylewhite_A700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragmentContainerView3"
                        android:name="com.application.app.modules.recetas.ui.FragmentVerReceta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </ScrollView>

            <FrameLayout
                android:id="@+id/frameBottombar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25pxv"
                android:gravity="bottom">

                <LinearLayout
                    android:id="@+id/linear2FourupAO"
                    style="@style/groupStylebluegray_802"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear1Tab"
                        style="@style/groupStylebluegray_800"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="goHome"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageHome"
                            android:layout_width="@dimen/_30pxh"
                            android:layout_height="@dimen/_21pxh"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_home"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_home" />

                        <TextView
                            android:id="@+id/txtCaption"
                            style="@style/txtRobotoregular12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginBottom="@dimen/_11pxv"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="@dimen/_1pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_men"
                            tools:text="@string/lbl_men" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearColumnvolume"
                        style="@style/groupStylebluegray_800"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear3Tab"
                            style="@style/groupStylebluegray_800"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageVolume"
                                android:layout_width="@dimen/_20pxh"
                                android:layout_height="@dimen/_20pxh"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_9pxv"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_volume"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_volume" />

                            <TextView
                                android:id="@+id/txtCaptionOne"
                                style="@style/txtRobotoregular12_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_marginTop="@dimen/_3pxv"
                                android:layout_marginEnd="@dimen/_2pxh"
                                android:layout_marginBottom="@dimen/_8pxv"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:letterSpacing="0.02"
                                android:lineSpacingExtra="@dimen/_1pxh"
                                android:singleLine="true"
                                android:text="@string/lbl_information"
                                tools:text="@string/lbl_information" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
         