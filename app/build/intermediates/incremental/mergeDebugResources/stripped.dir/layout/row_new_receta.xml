<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/receta_titulo"
        style="@style/etSolid1"
        android:layout_width="383dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/rectangle_bg_green_301_radius_10"
        android:drawablePadding="@dimen/_30pxh"
        android:ellipsize="end"
        android:hint="@string/lbl_receta_1"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:paddingStart="@dimen/_12pxh"
        android:paddingTop="@dimen/_15pxv"
        android:paddingEnd="@dimen/_14pxh"
        android:paddingBottom="@dimen/_16pxv"
        android:singleLine="false"
        android:text="@string/lbl_recetas"
        android:textColorHint="@color/black_900_dd"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/receta_ingredientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/receta_ingredientes"
        style="@style/etSolid"
        android:layout_width="402dp"
        android:layout_height="71dp"
        android:background="@drawable/rectangle_bg_white_a700"
        android:drawablePadding="@dimen/_30pxh"
        android:ellipsize="end"
        android:hint="@string/lbl_receta_1"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:orientation="vertical"
        android:paddingStart="@dimen/_12pxh"
        android:paddingTop="@dimen/_15pxv"
        android:paddingEnd="@dimen/_14pxh"
        android:paddingBottom="@dimen/_16pxv"
        android:singleLine="false"
        android:text="@string/lbl_recetas"
        android:textColorHint="@color/black_900_dd"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/receta_titulo"
        app:layout_constraintTop_toBottomOf="@+id/receta_titulo"
        tools:ignore="Autofill" />


</androidx.constraintlayout.widget.ConstraintLayout>