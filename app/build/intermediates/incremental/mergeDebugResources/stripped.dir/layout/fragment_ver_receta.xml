<?xml version="1.0" encoding="UTF-8"?>

                                                                                                       
    
                                                                                                        
           
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnmask"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700" android:tag="layout/fragment_ver_receta_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/linearRecetas"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearRecetasVer"
                    style="@style/groupStylewhite_A700"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtH"
                        style="@style/tituloRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_101pxh"
                        android:layout_marginTop="@dimen/_42pxv"
                        android:layout_marginEnd="@dimen/_101pxh"
                        android:layout_marginBottom="@dimen/_21pxv"
                        android:ellipsize="end"

                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="false"
                        android:tag="binding_1"                       
                        android:textAlignment="center"
                        android:textStyle="bold"
                        tools:text="@string/lbl_recetas2" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="411dp"
                        android:layout_height="225dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/labelsRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:text="@string/lbl_ingredientes2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescription2"
                        style="@style/ingredientesRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:textStyle="italic"
                        tools:text="@string/msg_se_desperdician" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/labelsRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:text="@string/lbl_preparacion"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescription3"
                        style="@style/descripcionRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:gravity="center"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="3dp" />

                    <TextView
                        android:id="@+id/link"
                        style="@style/labelsRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:autoLink="all"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:text="@string/link"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>




        </LinearLayout>

    </LinearLayout>
         